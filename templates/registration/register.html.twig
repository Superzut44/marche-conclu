{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="user-edit-h1">
        <h1>Créér un compte</h1>
    </div>
    <div class="user-edit-div-form">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.avatar) }}
        {{ form_row(registrationForm.company) }}
        {{ form_row(registrationForm.phone_number) }}
        {{ form_row(registrationForm.job) }}
        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'registration-form-agreeTerms'}}) }}
        {{ form_row(registrationForm.enregistrer) }}
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
