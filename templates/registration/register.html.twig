{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="user_edit-h1">
        <h1>Créér un compte</h1>
    </div>
    <div>
        {% if not registrationForm.vars.valid %}
            <div class="alert alert-error">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}
    </div>
    <div class="user_edit-div-form">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.firstname) }}
        {{ form_row(registrationForm.lastname) }}
        {{ form_row(registrationForm.avatar) }}
        {{ form_row(registrationForm.company) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">S'enregistrer</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
