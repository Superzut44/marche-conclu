<button class="returnButton" id="myModalBtn" type="submit">{% include "space/_filter_button.html.twig" %}</button>

<div
	id="myModal" class="modal">
	<!-- Modal content -->
	<div class="modal-content">
		<form class="form-filters">
			<div>
				<label for="start">Dates</label>
				<input type="date" id="start" name="date" placeholder="m²" value="2022-01-15" min="2021-01-05" max="2024-12-31">
			</div>
			<p>Types d'espaces</p>
			<div class="space-filter">

				<input type="checkbox" name="my-checkbox" id="meeting" class="hidden-checkbox" hidden>
				<label for="meeting">Salle de réunion</label>

				<input type="checkbox" name="my-checkbox" id="private" class="hidden-checkbox" hidden>
				<label for="private">Bureau privé</label>

				<input type="checkbox" name="my-checkbox" id="open-space" class="hidden-checkbox" hidden>
				<label for="open-space">Open space</label>

				<input type="checkbox" name="my-checkbox" id="co-working" class="hidden-checkbox" hidden>
				<label for="co-working">Co-working</label>

				<input type="checkbox" name="my-checkbox" id="storage" class="hidden-checkbox" hidden>
				<label for="storage">Espace de stockage</label>

				<input type="checkbox" name="my-checkbox" id="plateau" class="hidden-checkbox" hidden>
				<label for="plateau">Plateaux vides</label>
			</div>
			<div class="filter-range">
				<label for="range">Prix max</label>
				<input type="range" id="range" name="price" min="10" max="1500" step="10" oninput="this.form.priceInput.value=this.value">
				<input type="number" name="priceInput" min="0" max="20" value="0" oninput="this.form.priceRange.value=this.value"/>
			</div>
			<div>
				<label for="range">Surface minimum</label>
				<input type="range" id="range" name="surface" min="5" max="1000" step="10" oninput="this.form.amountInput.value=this.value">
				<input type="number" name="amountInput" min="0" max="20" value="0" oninput="this.form.amountRange.value=this.value"/>
			</div>
			<button type="submit">
				Chercher
			</button>
		</form>
		<span class='closeSearch' onclick='closeModal()'>&times;</span>
	</div>
</div>
<script>
	// Get the modal
const modal = document.getElementById("myModal");
// Get the button that opens the modal
const btn = document.getElementById("myModalBtn");
// Get the button closeSearch element that closes the modal
const closeSearch = document.getElementsByClassName("closeSearch")[0];
// When the user clicks the button, open the modal
btn.onclick = function () {
modal.style.display = "block";
}
// When the user clicks on rechercher(x), close the modal
closeSearch.onclick = function () {
modal.style.display = "none";
}
// When the user clicks anywhere outside of the modal, close it
window.onclick = function (event) {
if (event.target == modal) {
modal.style.display = "none";
}
}
</script>
