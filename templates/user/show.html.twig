{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="user-index-h1">
        <h1>Page utilisateur</h1>
    </div>
    <div class="user-index-container">
        <div class="show-user-main-datas">
            <div class="show-user-photo">
                {% if user.avatar %}
                    <img class="user-index-avatar" src="{{ asset('build/images/' ~ user.avatar) }}">
                {% else %}
                    <img class="user-index-avatar" src="{{ asset('build/images/logoMarcheConcluXL.png') }}">
                {% endif %}
            </div>
            <div class="show-user-fullname">
                <h2>{{ user.lastname }}</h2>
                <h2>{{ user.firstname }}</h2>
            </div>
        </div>
        <div class="show-user-secondary-datas">
            <div class="show-user-contacts"
                {% if user.phoneNumber %}
                    <p>{{ "☎️ " ~ user.phoneNumber }}</p>
                {% endif %}
                <p>{{ "✉️ " ~ user.email }}</p>
            </div>
            <div class="show-user-job">
                {% if user.job %}
                    <p>{{ "⚙️ " ~ user.job }}</p>
                {% endif %}
                {% if user.company %}
                    <p>{{ "🏢 " ~ user.company }}</p>
                {% endif %}
            </div>
        </div>
        <div class="show-user-annonce-btns">
            {% if user.email %}
                <a class="user-index-submit" href="mailto:{{ user.email }}">📧 Email</a>
            {% endif %}
            {% if user.phoneNumber %}
                <a class="user-index-submit" href="tel:+33{{ user.phoneNumber }}">📞 Téléphone</a>
            {% endif %}
        </div>
{% endblock %}
